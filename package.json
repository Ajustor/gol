{
  "name": "@ajustor/gol",
  "version": "1.0.0",
  "description": "A game of life implementation",
  "main": "dist/app.js",
  "types": "dist/index.d.ts",
  "private": false,
  "files": [
    "/dist"
  ],
  "scripts": {
    "coverage": "nyc -r lcov -e .ts -x \"*.test.ts\" npm run test",
    "dev": "ts-node src/app.ts",
    "build": "rm -rf dist && tsc",
    "start": "node dist/app.js"
  },
  "release-it": {
    "git": {
      "commitMessage": "release v${version}"
    },
    "github": {
      "release": true
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Ajustor/gol"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/chai": "^5.0.1",
    "@types/jest": "^29.5.14",
    "@types/mocha": "^10.0.10",
    "chai": "^5.1.2",
    "faker": "6.6.6",
    "jest": "^29.7.0",
    "mocha": "^11.0.2",
    "nyc": "^17.1.0",
    "rxjs": "^7.8.1",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "tslib": "^2.8.1",
    "typescript": "^5.7.2"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  },
  "dependencies": {
    "blessed": "^0.1.81",
    "command-line-draw": "^1.2.3",
    "drawille": "^2.0.2"
  }
}