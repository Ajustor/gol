{
  "name": "@ajustor/gol",
  "version": "1.0.0",
  "description": "A game of life implementation",
  "main": "dist/app.js",
  "types": "dist/index.d.ts",
  "private": false,
  "files": [
    "/dist"
  ],
  "scripts": {
    "coverage": "nyc -r lcov -e .ts -x \"*.test.ts\" npm run test",
    "dev": "ts-node src/app.ts",
    "build": "rm -rf dist && tsc",
    "start": "node dist/app.js"
  },
  "release-it": {
    "git": {
      "commitMessage": "release v${version}"
    },
    "github": {
      "release": true
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Ajustor/gol"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/chai": "^4.3.0",
    "@types/jest": "^27.4.0",
    "@types/mocha": "^9.1.0",
    "chai": "^4.3.6",
    "faker": "5.5.3",
    "jest": "^27.5.0",
    "mocha": "^9.2.0",
    "nyc": "^15.1.0",
    "rxjs": "^7.5.2",
    "ts-jest": "^27.1.3",
    "ts-node": "^10.4.0",
    "tslib": "^2.0.1",
    "typescript": "^4.5.5"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  },
  "dependencies": {
    "blessed": "^0.1.81",
    "command-line-draw": "^1.2.3",
    "drawille": "^1.1.1"
  }
}
